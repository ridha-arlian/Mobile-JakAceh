<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">

    <TextView
        android:id="@+id/logojak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/vollkorn"
        android:textColor="@color/coklat_kayu"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="JAK-ACEH"
        android:textSize="30dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@+id/logojak"
        android:layout_margin="50dp"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:layout_marginTop="30dp"
            android:hint="Username"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/coklat_kayu"
            app:hintTextColor="@color/coklat_kayu">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:layout_marginTop="30dp"
            android:hint="Password"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:passwordToggleEnabled="true"
            app:boxStrokeColor="@color/coklat_kayu"
            app:hintTextColor="@color/coklat_kayu">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgetpw"
            android:textColor="@color/coklat_susu_banget"
            android:backgroundTint="@color/transparan"
            android:textSize="11dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:text="Lupa Password?"></Button>

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/login"
            android:layout_marginTop="40dp"
            android:layout_gravity="center"
            android:text="Sign In"
            android:textColor="@color/putih_dedak"
            android:backgroundTint="@color/coklat_susu_banget"
            android:onClick="loginUser"></Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup"
            android:layout_gravity="center"
            android:textColor="@color/coklat_kayu"
            android:backgroundTint="@color/transparan"
            android:textSize="12dp"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:text="Belum ada akun? Sign Up"></Button>

    </LinearLayout>
</LinearLayout>